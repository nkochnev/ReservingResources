@{
    ViewData["Title"] = "Home Page";
}
@model ReserveBot.Web.Models.Accounts.EditAccountViewModel
@using (Html.BeginForm())
{
    <input type="hidden" asp-for="@Model.Id"/>
    <div class="form-group">
        @Html.LabelFor(x => x.Name, "Имя")
        @Html.TextBoxFor(m => m.Name, null, new {@class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Name, "Telegram login")
        @Html.TextBoxFor(m => m.TelegramLogin, null, new {@class = "form-control"})
    </div>
    <div class="form-group">

        @for (var i = 0; i < Model.Teams.Count; i++)
        {
            <li>
                <input type="checkbox" asp-for="@Model.Teams[i].Selected"/>
                <label asp-for="@Model.Teams[i].Selected">@Model.Teams[i].Text</label>
                <input type="hidden" asp-for="@Model.Teams[i].Value"/>
                <input type="hidden" asp-for="@Model.Teams[i].Text"/>
            </li>
        }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}